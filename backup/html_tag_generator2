module HtmlComponent
  class HtmlTagGenerator
    FORM_COMPONENT = "HtmlComponent"
    CONTENT_COMPONENT_LIST = [
      :text,
      :combo_box,
      :tag,
      :link,
      :script
    ]
    HEADER_COMPONENT_LIST = [
      :div,
      :head,
      :form
    ]

    def initialize(options = {})
      @options = options
      @commands = []
      yield(self)
    end

    # sample def shape
    # def text(attributes)
    #   attributes = {attributes: attributes}
    #   @commands << attributes.merge(type: :text)
    # end
    CONTENT_COMPONENT_LIST.each do |component|
      define_method :"#{component}" do |attributes|
        attributes = {attributes: attributes}
        @commands << attributes.merge(type: component)
      end
    end

    def customize(attributes)
      yield
    end

    HEADER_COMPONENT_LIST.each do |component|
      define_method :"#{component}" do |attributes|
        attributes = {attributes: attributes}
        @commands << attributes.merge(type: component)
        yield(self)
      end
    end

    def render
      generate_tag do |f|
        @commands.map do |c|
          generate_class(c[:type]).new(c[:attributes]).perform
        end.join
      end
    end

    private

    def generate_tag
      form_attributes = @options[:attributes].map do |k, v|
        " #{k}='#{v}'"
      end.join

      tag_name = @options[:type]

      form_tag = "<#{tag_name} #{form_attributes}>"
      form_tag += yield
      form_tag += "</#{tag_name}>"
    end

    def generate_class(type)
      get_form_name(type).constantize
    end

    def get_form_name(type)
      "#{FORM_COMPONENT}::#{type.to_s.camelize}"
    end
  end

  class ComponentTag
    def initialize(attributes)
      @attributes = attributes
    end

    def tag_name
      raise "need to implement this"
    end

    def perform
      tag = "<#{tag_name}"

      tag += @attributes.map do |k, v|
        " #{k}='#{v}'"
      end.join

      tag + closing_tag
    end

    def closing_tag
      "</#{tag_name}>"
    end
  end

  class Form < ComponentTag
    def tag_name
      "form"
    end
  end

  class Div < ComponentTag
    def tag_name
      "div"
    end
  end

  class Head < ComponentTag
    def tag_name
      "head"
    end
  end

  class Link < ComponentTag
    def tag_name
      "link"
    end

    def closing_tag
      "/>"
    end
  end

  class Script < ComponentTag
    def tag_name
      "script"
    end
  end

  class Text < ComponentTag
    def tag_name
      "input"
    end

    def closing_tag
      ">"
    end
  end


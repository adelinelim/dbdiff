<link rel="stylesheet" href="css/new_diff_table.scss" type="text/css" />
<script src="javascript/jquery.min.js" type="text/javascript"></script>
<script src="javascript/add_connection_view.js" type="text/javascript"></script>

<form action="/add" method="get" class="add_connection_view">
  <div>Database Connection:</div>
  <div>
    <span>Name:</span>
    <input type="text" id="name" name="name" required>
  </div>
  <div>
    <span>Adapter:</span>
    <select id="adapter_select">
      <option value='pg' selected>pg</option>
      <option value='mysql'>mysql</option>
    </select>
    <input type="hidden" id="adapter" name="adapter">
  </div>
  <div>
    <span>Host:</span>
    <input type="text" id="host" name="host" placeholder="optional">
  </div>
  <div>
    <span>Username:</span>
    <input type="text" id="username" name="username" placeholder="optional">
  </div>
  <div>
    <span>Password:</span>
    <input type="text" id="password" name="password" placeholder="optional">
  </div>
  <div>
    <span>Database:</span>
    <input type="text" id="database" name="database" required>
  </div>
  <div>
    <span>Port:</span>
    <input type="text" id="port" name="port" placeholder="optional">
  </div>
  <div class="buttons-group">
    <a href="/setup" id="setup" class="btn-submit">Back</a>
    <input id="add" type="submit" class="btn-submit" value="Add">
  </div>
</form>

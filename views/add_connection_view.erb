<link rel="stylesheet" href="css/new_diff_table.css" type="text/css" />
<link rel="stylesheet" href="css/add_connection.css" type="text/css" />
<script src="javascript/jquery.min.js" type="text/javascript"></script>
<script src="javascript/add_connection_view.js" type="text/javascript"></script>

<form action="/add" method="get">
  <div><h2>Database Connection:</h2></div>
  <div>
    <label>Name:</label>
    <input type="text" id="name" name="name" required class="input-text">
  </div>
  <div>
    <label>Adapter:</label>
    <select id="adapter_select">
      <option value='pg' selected>pg</option>
      <option value='mysql'>mysql</option>
    </select>
    <input type="hidden" id="adapter" name="adapter">
  </div>
  <div>
    <label>Host:</label>
    <input type="text" id="host" name="host" placeholder="optional"  class="input-text">
  </div>
  <div>
    <label>Username:</label>
    <input type="text" id="username" name="username" placeholder="optional" class="input-text">
  </div>
  <div>
    <label>Password:</label>
    <input type="text" id="password" name="password" placeholder="optional" class="input-text">
  </div>
  <div>
    <label>Database:</label>
    <input type="text" id="database" name="database" required class="input-text">
  </div>
  <div>
    <label>Port:</label>
    <input type="text" id="port" name="port" placeholder="optional" class="input-text">
  </div>
  <div class="buttons-group">
    <a href="/setup" id="setup" class="btn-submit">Back</a>
    <input id="add" type="submit" class="btn-submit" value="Add">
  </div>
</form>
